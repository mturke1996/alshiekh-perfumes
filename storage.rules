rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function
    function isAdmin() {
      return request.auth != null && 
             firestore.exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }
    
    // Products images - anyone can read, only admins can write
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Review images - anyone can read, authenticated users can upload
    match /reviews/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // User images - anyone can read, users can only upload their own
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Banners - anyone can read, only admins can write
    match /banners/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}

